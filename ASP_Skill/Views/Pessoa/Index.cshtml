@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<html>
<head>
    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Lista de Pessoas</h1>
        <div class="mb-3">
            <button class="btn btn-warning" id="btnToggle">Dados</button>
            <a href="Cadastrar"><button class="btn btn-primary">Cadastrar</button></a>
        </div>
        <table class="table mt-3" id="tabelaPessoas">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Data de Nascimento</th>
                    <th>Sexo</th>
                    <th>Estado Civil</th>
                    <th>CPF</th>
                    <th>Endereço</th>
                    <th>Número</th>
                    <th>CEP</th>
                    <th>Complemento</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>UF</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dados serão inseridos aqui -->
            </tbody>
        </table>

    </div>

    <!-- Modal de criação de pessoa -->
    <div class="modal fade" id="modalAdicionarPessoa" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Adicionar Pessoa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formAdicionarPessoa">
                        <div class="mb-3">
                            <label for="nome" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nome" name="nome" required>
                        </div>
                        <!-- Adicione os demais campos aqui -->
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btnSalvar">Salvar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Carregar dados da tabela ao carregar a página
            $.get("/Pessoa/GetPessoas", function (data) {
                $("#tabelaPessoas").html(data);
            });

            // Toggle da tabela ao clicar em "Dados"
            $("#btnToggle").click(function () {
                $("#tabelaPessoas").fadeToggle();
            });
        });

    </script>
</body>
</html>
